<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="be.kuleuven.tennistoernooijava.databasePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>be.kuleuven.tennistoernooijava.database.Tennisclubs</class>
        <class>be.kuleuven.tennistoernooijava.database.Adressen</class>
        <class>be.kuleuven.tennistoernooijava.database.Datums</class>
        <class>be.kuleuven.tennistoernooijava.database.Spelers</class>
        <class>be.kuleuven.tennistoernooijava.database.SpelerEmailadressen</class>
        <class>be.kuleuven.tennistoernooijava.database.Reeksen</class>
        <class>be.kuleuven.tennistoernooijava.database.Toernooien</class>
        <class>be.kuleuven.tennistoernooijava.database.Matchen</class>
        <class>be.kuleuven.tennistoernooijava.database.Velden</class>
        <class>be.kuleuven.tennistoernooijava.database.Wedstrijdleider</class>
        <class>be.kuleuven.tennistoernooijava.database.Scheidsen</class>
        <class>be.kuleuven.tennistoernooijava.database.Ballenrapers</class>
        <class>be.kuleuven.tennistoernooijava.database.Supporters</class>
        <class>be.kuleuven.tennistoernooijava.database.Finales</class>
        <class>be.kuleuven.tennistoernooijava.database.Deelnamen</class>

        <properties>
            <property name="show_sql" value="true"/>
            <property name="format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.generate_statistics" value="true"/>


            <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <property name="javax.persistence.jdbc.user" value=""/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.connection.url" value="jdbc:sqlite:target/Database.db"/>

            <property name="hibernate.dialect" value="org.sqlite.hibernate.dialect.SQLiteDialect"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.connection.driver_class" value="org.sqlite.JDBC"/>
        </properties>
    </persistence-unit>
</persistence>